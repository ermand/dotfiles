# Common
alias ..="cd .."
alias ...="cd ../.."
alias h="cd ~"
alias c="clear"
alias ll="ls -lahG"
alias work="cd ~/Code"
alias vm_lumas="cd ~/Code/Avenso/vm-spryker-ansible"
alias tree="find . -print | sed -e 's;[^/]*/;|____;g;s;____|; |;g'"

# Laravel
alias art="php artisan"
alias tinker="php artisan tinker"
alias migrate="php artisan migrate"
alias refresh="php artisan migrate:refresh --seed"
alias code_sniff="php-cs-fixer --verbose fix"
alias cs="php-cs-fixer --verbose fix"
alias ci="composer install"

# NPM
alias yrd="yarn run dev"
alias yrw="yarn run watch"
alias yrp="yarn run production"
alias yrs="yarn run serve"
alias nrd="npm run dev"
alias nrw="npm run watch"
alias nrp="npm run production"
alias nrs="npm run serve"

# Test
alias codecept='vendor/bin/codecept'
alias crf='codecept run functional'
alias cgf='codecept generate:cept functional'
alias cra='codecept run acceptance'
alias cga='codecept generate:cept acceptance'
alias cr='codecept run'
alias phpspec='vendor/bin/phpspec'
alias test='vendor/bin/phpunit'
alias tf='vendor/bin/phpunit --filter'
alias tct="phpdbg -qrr ./vendor/phpunit/phpunit/phpunit --coverage-text"
alias tch="phpdbg -qrr ./vendor/phpunit/phpunit/phpunit --coverage-html"
alias start_phantomjs='vendor/bin/phantomjs --webdriver=4444 --webdriver-loglevel=NONE --ignore-ssl-errors=true --ssl-protocol=any &'
alias stop_phantomjs='pgrep phantomjs | xargs kill'
alias start_selenium='selenium-server -port 4444'
alias stop_mysql='pgrep mysql | xargs kill'

# Git
alias gs='git status'
alias gaa='git add'
alias gc='git commit -m'
alias gpush='git push'
alias gpull='git pull'
alias gch='git checkout'
alias gdiff='git diff'
alias glog="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
alias nah="git reset --hard && git clean -df"
alias wip="git add . && git commit -m 'wip'"
#alias cleanup-dev-branches="!f() { git branch --merged ${1-master} | grep -v " ${1-master}$" | xargs -r git branch -d; }; f"

# GitFlow
alias gff='git flow feature'
alias gfl='git flow release'
alias gfh='git flow hotfix'

# Bindings
bindkey -e
#bindkey '^[[1;9C' forward-word
#bindkey '^[[1;9D' backward-word

# Forward  words
bindkey "\e\e[D" backward-word
# Go end of line
bindkey "\e\e[C" end-of-line
# or if you prefer going word by word to the end:
# bindkey "\e\e[C" forward-word

# Avenso
alias shop='cd ~/Code/Avenso/vm-spryker-ansible/server/shop'
alias pim='cd ~/Code/Avenso/vm-spryker-ansible/server/pim'

## NPM Avenso
alias l:w='npm run lumas:watch'
